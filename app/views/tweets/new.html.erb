<div class="contents row">
  <div class="container">
    <%= form_with(model: @tweet, local: true) do |form| %>
      <h3>
        Post
      </h3>
      <%= form.text_field :name, placeholder: "Nickname" %>
      
      <%= form.label :img %>
      <%= form.file_field :image, id: :tweet_img %>
      
      <%= form.text_area :text, placeholder: "text" , rows: "10" %>
      <%= form.submit "SEND" %>
    <% end %>
  </div>
</div>