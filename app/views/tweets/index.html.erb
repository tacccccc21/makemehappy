<div class="contents row">

<% if user_signed_in? %>

<div class="profile">
  <div class="icon">
  <% if user_signed_in? %>   
<img src="<%= current_user.avatar %>" class="prf-img">
  <%end%>
  </div>

  <div class="profile-contents">
    <div class="prf-name">
    
    <h3>NAME: 
    <% if user_signed_in? %>
    <%= current_user.nickname %>
    <%end%>
    </h3>
    </div>
  </div>
</div>


<div class="post-box">
<%= form_with(url: search_tweets_path, local: true, method: :get, class: "search-form") do |form| %> 
  <%= form.text_field :keyword, placeholder: "投稿を検索する", class: "search-input" %>
  <%= form.submit "検索", class: "search-btn" %>
  <% end %>
  <% @tweets.each do |tweet| %>
  
  <%= render partial: "tweet", locals: { tweet: tweet } %>
  
  <% end %>
   <div class="scroll" onclick="scrollToTop()"></div>
  <%= paginate(@tweets) %>
  
</div>

<% else %>


<div class="newSignUp">


  <h1>MAKE ME HAPPY!</h1>

  <div class="newSignUp__Box">

    <div class="newSignUp__Box__name">
      <h2>MAKE ME HAPPY! <span> とは？</span></h2>
    </div>
  
    <div class="newSignUp__Box__text">
      <p>
      　このアプリは、SNS型の商品レビューサービスです。<br>お気軽に投稿できて、コメントによる質問や交流が楽しめます。
      いろんなアイテムを見ることができるので新しい発見や趣味ができるかもしれません。ぜひお楽しみください！
      </p>
    </div>
     


      <div class="btnbox">
        <div class="new">
          <%= link_to "ログイン", new_user_session_path, class: 'newbtn' %>
        </div>
        <div class="new">
          <%= link_to "新規登録", new_user_registration_path, class: 'newbtn' %>
        </div>
         </div>
  </div>



</div>




<% end %>

 
</div>